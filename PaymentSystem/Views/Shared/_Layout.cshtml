<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment System</title>
   @Styles.Render("~/Content/css")   
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>   
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="~/Scripts/angular-ui/spin.js"></script>
    <script src="~/Scripts/angular-ui/angular-agility.js"></script>
    <script src="~/Scripts/angular-ui/angular-spinner.js"></script>
    <script src="~/Scripts/angular-ui/validate.js"></script>
    <script src="~/Scripts/angular-route.js"></script>    
    <script src="~/Scripts/app.js"></script>
       
</head>
<body ng-app="myapp">
    <div aa-notify style="position: fixed; bottom: 10px; right: 20px; z-index:100000;"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <link href="~/css/custom.css" rel="stylesheet" />
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Payment System", "Index", "Payment", new { area = "" }, new { @class = "navbar-brand" })
            </div>           
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()       
    </div>

    @Scripts.Render("~/bundles/bootstrap")    
    
</body>
</html>
